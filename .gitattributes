* text=auto

# Normalize line endings
*.py text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.toml text eol=lf
*.ipynb text eol=lf

# Windows scripts
*.ps1 text eol=crlf
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.xlsx binary
*.xls binary
*.pptx binary
*.docx binary
*.zip binary

# Performance optimizations
*.min.js -diff
*.min.css -diff
*.lock -diff

# Large data files (if using Git LFS)
*.pkl filter=lfs diff=lfs merge=lfs -text
*.pickle filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text
*.h5 filter=lfs diff=lfs merge=lfs -text
*.hdf5 filter=lfs diff=lfs merge=lfs -text

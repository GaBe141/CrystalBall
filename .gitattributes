* text=auto

# Normalize line endings
*.py text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.toml text eol=lf
*.ipynb text eol=lf

# Windows scripts
*.ps1 text eol=crlf
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.xlsx binary
*.xls binary
*.pptx binary
*.docx binary
*.zip binary
